{
  "version": 2,
  "build":{
    "env":{
      "JWT_SECRET": "your-secret-key"
    }
  },
  
  "routes": [
    { "src": "/api/auth", "dest": "/api/auth.js" },
    { "src": "/api/verify", "dest": "/api/verify.js" },
    { "src": "/sistema.html", "dest": "/sistema.html" },
    { "src": "/gerencia.html", "dest": "/gerencia.html" },
    { "src": "/index.html", "dest": "/index.html" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}